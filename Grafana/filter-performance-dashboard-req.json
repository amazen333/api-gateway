{
  "panels": [
    {
      "title": "Filter Execution Time",
      "targets": [{
        "expr": "rate(gateway_filter_seconds_sum[5m]) / rate(gateway_filter_seconds_count[5m])",
        "legendFormat": "{{filter}} - {{route}}"
      }]
    },
    {
      "title": "Filter Error Rate",
      "targets": [{
        "expr": "rate(gateway_errors_total{exception!=\"\"}[5m])",
        "legendFormat": "{{filter}} - {{exception}}"
      }]
    },
    {
      "title": "Slowest Filters (p95)",
      "targets": [{
        "expr": "histogram_quantile(0.95, rate(gateway_filter_seconds_bucket[5m]))",
        "legendFormat": "{{filter}}"
      }]
    }
  ]
}